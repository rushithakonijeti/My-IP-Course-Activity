#include <stdio.h>

float calculateBill(float units)
{
    float bill = 0;

    if (units <= 50)
    {
        bill = units * 0.50;
    }
    else if (units <= 150) {
        bill = 25 + ((units - 50) * 0.75);
    }
    else if (units <= 250) {
        bill = 25 + 75 + ((units - 150) * 1.20);
    }
    else {
        bill = 25 + 75 + 120 + ((units - 250) * 1.50);
    }

    return bill;
}

int main() 
{
    float units;

    printf("Enter electricity units consumed: ");
    scanf("%f", &units);

    if (units < 0) 
    {
        printf("Invalid input. Units cannot be negative.\n");
    }
    else 
    {
        float totalBill = calculateBill(units);
        printf("Total electricity bill: Rs. %.2f\n", totalBill);
    }

    return 0;
}
