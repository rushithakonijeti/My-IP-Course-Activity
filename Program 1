#include<stdio.h>
int main()
{
    float fh,cl;
    int choice;
    printf("\n1: Convert temperature from Farenheit to Celsius. ");
    printf("\n2: Convert temperature from to Celsius to Farenheit.");
    printf("Enter your choice (1,2)");
    scanf("%d", &choice);
    
    if (choice==1)
    {
        printf("\nEnter temperature in Farenheit:");
        scanf("%f", &fh);
        cl=(fh-32)/1.8;
        printf("Temperature in Celsius is %.2f",cl);
    }
    else if (choice==2)
    {
        printf("\nEnter temperature in Celsius:")
        scanf("%f", &cl);
        fh=(cl*1.8)+32;
        printf("Temperature is Farenheit is %.2f", fh);
    }
    else
    {
        printf("\nInvalid Choice");
    }
}

